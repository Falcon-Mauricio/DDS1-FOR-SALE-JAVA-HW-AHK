{{#layout}}
    <h2>Listado de Inmuebles</h2>
    <p>Listado de todos los inmuebles disponibles en la base de datos.</p>

    <div class="actions">
        <button>Filtrar</button>
        <button>Editar</button>
        <a href="/inmuebles/crear">
            <button>Agregar</button>
        </a>
        <button>Eliminar</button>
        <button>Exportar</button>
    </div>
    <table>
        <thead>
        <tr>
            <th>ID del Inmueble</th>
            <th>Ambientes</th>
            <th>Tama√±o</th>
            <th>Tipo De Vivienda</th>
            <th>Operacion</th>
            <th>Estado</th>
        </thead>
        <tbody>
        {{#inmuebles}}
            <tr>
                <td>{{id}}</td>
                <td class="ambientes">{{cantAmbientes}}</td>
                <td class="tamanio">{{tamanioEnM2}}</td>
