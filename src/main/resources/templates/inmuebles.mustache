                <td class="tipo">{{operacion.tipo}}</td>
                <td class="estado">{{estadoOperacion.estado}}</td>
                <td><a href="/inmuebles/{{id}}/reservar">
                    <button>Reservar</button>
                </a></td>
                <td><a href="/inmuebles/{{id}}/reservar">
                    <button>Concretar</button>
                </a>
                </td>
            </tr>
        {{/inmuebles}}
        </tbody>
    </table>
</div>
