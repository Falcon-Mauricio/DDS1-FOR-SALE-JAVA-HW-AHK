{{#layout}}
    <h2>Zonas</h2>
    <p>Listado de todas las zonas a las que puedes acceder.</p>

    <div class="actions">
        <button>Filtrar</button>
        <button>Editar</button>
        <a href="/zonas/crear">
            <button>Agregar</button>
        </a>
        <button>Eliminar</button>
        <button>Exportar</button>
    </div>

    <table>
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>ID</th>
        </tr>
        </thead>
        <tbody>
            {{#zonas}}
                <tr>
                    <td>{{nombre}}</td>
                    <td class="price">{{precio}}</td>
                    <td class="id">{{id}}</td>
                </tr>
            {{/zonas}}
        </tbody>
    </table>
{{/layout}}

