            <label for="precio">Precio de la Zona (USD):</label>
            <input type="number" id="precio" name="precio" placeholder="Ejemplo: 1200" required>
        </div>

        <div class="form-group">
            <label for="id">ID de la Zona:</label>
            <input type="text" id="id" name="id" placeholder="ID Ãºnico de la zona" required>
        </div>

